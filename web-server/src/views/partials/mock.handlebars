{{#ifMinor mocks, 1}}
    <div class="row">
        <div class="col-12">
            <h2>Mocks</h2>
        </div>
    </div>
{{else}}
<div class="container">
    {{#each mocks as |mock|}}
        <div class="row" data-status="{{mock.status}}">
            <div class="col-10">
                <h3 class="title">{{mock.uuid}}</h3>
                <p class="target-url"><span class="badge text-bg-primary">{{mock.method}}</span> {{mock.targetUrl}}</p>
            </div>
            <div class="actions">
                <button class="status {{#if mock.status}}active{{/if}}" onclick="changeStatusMock('{{mock.uuid}}', {{#if mock.status}}false{{else}}true{{/if}})">{{#if mock.status}} disable {{else}} enable {{/if}}</button>
                <button class="delete" onclick="deleteMock('{{mock.uuid}}')">delete</button>
                <button class="edit" onclick="getMockForModal('{{mock.uuid}}')">show</button>
            </div>
        </div>
    {{/each}}
</div>
{{/if}}

<div class="modal fade" id="modaljson" tabindex="-1" aria-labelledby="modaljsonLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="modaljsonLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="jsoneditor"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
